TabGroup {
    flex-direction: column;
}

TabGroup > Toolbar {
    flex-grow: 1;
    margin-top: -2px;
    margin-left: -2px;
    margin-right: -2px;
    border-bottom-width: 0px;
    background-color: transparent;
}

TabGroup > Toolbar > ToolbarToggle {
    flex-basis: 0;
    flex-grow: 1;
    margin-left: 0px;
    border-bottom-width: 1px;
    border-right-width: 0px;
    background-color: var(--unity-colors-tab-background);
    left: 0px;
}

TabGroup > Toolbar > ToolbarToggle:hover {
    background-color: var(--unity-colors-tab-background-hover);
}

TabGroup > Toolbar > ToolbarToggle:checked {
    border-bottom-width: 0px;
    background-color: transparent;
}

TabGroup > Toolbar > ToolbarToggle Label {
    font-size: 13px;
    flex-grow: 1;
    -unity-text-align: middle-center;
}

ToolbarToggle.tab-first {
    border-left-width: 0;
}

ToolbarToggle.tab-last {
    border-right-width: 0;
}

TabGroup > .tab-content
{
    width: 100%;
    padding: 5px;
}
